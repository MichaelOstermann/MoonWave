{
    "extends": "@monstermann/tsconfig",
    "compilerOptions": {
        "paths": {
            "#actions/*": ["./src/actions/*"],
            "#components/*": ["./src/components/*"],
            "#config/*": ["./src/config/*"],
            "#features/*": ["./src/features/*/index.ts"],
            "#hooks/*": ["./src/hooks/*"],
            "#types": ["./src/types/index.ts"],
            "#utils/*": ["./src/utils/*"],
            "#src/*": ["./src/*"]
        },
        "allowImportingTsExtensions": true,
        "declaration": false,
        "isolatedModules": true
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "include": [
        "src",
        "packages/**/*",
        "@types"
    ]
}
