{
    "extends": "@sindresorhus/tsconfig",
    "compilerOptions": {
        "target": "ES2020",
        "jsx": "react-jsx",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "paths": {
            "@app/*": ["./src/*"]
        },
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "isolatedModules": true
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ],
    "include": ["src"]
}
